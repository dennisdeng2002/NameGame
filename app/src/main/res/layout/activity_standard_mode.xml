<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/standard_mode_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/image_view_1_container"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_color="@color/shimmer">

        <ImageView
            android:id="@+id/image_view_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/placeholder"
            android:contentDescription="@null" />

    </io.supercharge.shimmerlayout.ShimmerLayout>

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/image_view_2_container"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/image_view_1_container"
        app:shimmer_color="@color/shimmer">

        <ImageView
            android:id="@+id/image_view_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/placeholder"
            android:contentDescription="@null" />

    </io.supercharge.shimmerlayout.ShimmerLayout>

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/image_view_3_container"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/image_view_1_container"
        app:layout_constraintStart_toStartOf="@+id/image_view_1_container"
        app:layout_constraintTop_toBottomOf="@+id/image_view_1_container"
        app:shimmer_color="@color/shimmer">

        <ImageView
            android:id="@+id/image_view_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/placeholder"
            android:contentDescription="@null" />

    </io.supercharge.shimmerlayout.ShimmerLayout>

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/image_view_4_container"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="@+id/image_view_2_container"
        app:layout_constraintStart_toStartOf="@+id/image_view_2_container"
        app:layout_constraintTop_toTopOf="@+id/image_view_3_container"
        app:shimmer_color="@color/shimmer">

        <ImageView
            android:id="@+id/image_view_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/placeholder"
            android:contentDescription="@null" />

    </io.supercharge.shimmerlayout.ShimmerLayout>

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/image_view_5_container"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/image_view_3_container"
        app:layout_constraintStart_toStartOf="@+id/image_view_3_container"
        app:layout_constraintTop_toBottomOf="@+id/image_view_3_container"
        app:shimmer_color="@color/shimmer">

        <ImageView
            android:id="@+id/image_view_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/placeholder"
            android:contentDescription="@null" />

    </io.supercharge.shimmerlayout.ShimmerLayout>

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/image_view_6_container"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="@+id/image_view_4_container"
        app:layout_constraintStart_toStartOf="@+id/image_view_4_container"
        app:layout_constraintTop_toTopOf="@+id/image_view_5_container"
        app:shimmer_color="@color/shimmer">

        <ImageView
            android:id="@+id/image_view_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/placeholder"
            android:contentDescription="@null" />

    </io.supercharge.shimmerlayout.ShimmerLayout>

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_5_container"
        tools:text="Mr. DNice" />

</android.support.constraint.ConstraintLayout>
